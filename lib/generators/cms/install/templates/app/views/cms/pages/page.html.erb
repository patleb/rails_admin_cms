<%# view = cms_page %>

<% cms_cache do
   menu = cms_link(0, Float::INFINITY)
   image = cms_image
   blocks = cms_example(1, 4)
   # view_image = cms_view_image
   # view_block = cms_view_example
-%>

<%#= view.edit_link %>
<%#= view.add_link %>

<%= content_tag(:ul, menu.sortable) do %>
  <% menu.each do |link| %>
    <%= link.sortable_link_to %>
    <%= link.edit_link %>
  <% end %>
<% end %>
<%= menu.add_link %>

<%= image_tag image.path %>
<%= image.edit_link %>

<% blocks.each do |block| %>
  <%= block.render %>
<% end %>
<%= blocks.edit_links(:position) %>

<% end %>
